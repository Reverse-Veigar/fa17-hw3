<%= form_tag students_path do %>
  <%= label_tag(:name, "Name") %>
  <%= text_field_tag(:name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:grade_level, "Grade") %>
  <%= text_field_tag(:grade_level, nil, placeholder: @placeholder_grade_level) %>

  <%= label_tag(:university, "Grade level") %>
  <%= text_field_tag(:university, nil, placeholder: @placeholder_university) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create student") %>
<% end %>